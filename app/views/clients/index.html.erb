<h1>Lista de clientes</h1>

<%= link_to 'Cadastrar Cliente', new_client_path, class: 'btn btn-primary'  %>

<hr>

<div class="row justify-content-md-center">
  <% if @clients.present? %>
    <% @clients.each do |c| %>
      <div class="card col-md-3 m-5 p-0">
        <div class="card-body">
            <h5 class="card-title"><%= t('clients.name') %>: <%= link_to c.name, client_path(c) %></h5>
            <p class="card-text">
              <span class="fa fa-phone"></span>
              <strong><%= t('clients.phone') %></strong>: <%= c.phone %>
            </p>
            <p class="card-text">
              <span class="fa fa-phone"></span>
              <strong><%= t('clients.comercial_phone') %>:</strong> <%= c.comercial_phone %>
            </p>
            <p class="card-text">
              <span class="fa fa-envelope"></span>
              <strong><%= t('clients.email') %>:</strong> <%= c.email %>
            </p>
            <p class="card-text">
              <span class="fa fa-envelope"></span>
              <strong><%= t('clients.secondary_email') %>:</strong> <%= c.secondary_email %></li>
            </p>
            <p class="card-text">
              <strong><%= t('clients.created_at') %>:</strong> <%= l(c.created_at, format: :long) %>
            </p>
          </div>
      </div>
    <% end %>
  <% else %>
    <span>NÃ£o hÃ¡ clientes registrados!</span>
  <% end %>

</div>
<%= link_to 'Voltar', root_path, class: 'btn btn-light' %>