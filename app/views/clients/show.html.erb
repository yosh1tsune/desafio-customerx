<h1>Cliente: <%= @client.name %></h1>

<hr>

<%= link_to 'Editar Cliente', edit_client_path(@client), class: 'btn btn-primary mb-2' %>

<dl>
  <dt><%= t('clients.name') %>:</dt>
  <dd><%= @client.name %></dd>
  <dt><%= t('clients.email') %>:</dt>
  <dd><%= @client.email %></dd>
  <dt><%= t('clients.secondary_email') %>:</dt>
  <dd><%= @client.secondary_email %></dd>
  <dt><%= t('clients.phone') %>:</dt>
  <dd><%= @client.phone %></dd>
  <dt><%= t('clients.comercial_phone') %>:</dt>
  <dd><%= @client.comercial_phone %></dd>
</dl>

<%= link_to 'Excluir Cliente', client_path(@client), method: :delete, class: 'btn btn-danger'  %>
</div>

<div class="container-fluid mt-3">
<h3>Contatos</h3>

<hr>

<%= link_to 'Adicionar Contato', new_client_contact_path(@client), class: 'btn btn-primary'  %>
<div class="row justify-content-md-center">
  <% if @client.contacts.present? %>
    <% @client.contacts.each do |c| %>
      <div class="card col-md-3 m-5 p-0">
        <div class="card-body">
            <h5 class="card-title"><%= t('contacts.name') %>: <%= link_to c.name, contact_path(c) %></h5>
            <p class="card-text">
              <span class="fa fa-phone"></span>
              <strong><%= t('contacts.phone') %></strong>: <%= c.phone %>
            </p>
            <p class="card-text">
              <span class="fa fa-phone"></span>
              <strong><%= t('contacts.comercial_phone') %>:</strong> <%= c.comercial_phone %>
            </p>
            <p class="card-text">
              <span class="fa fa-envelope"></span>
              <strong><%= t('contacts.email') %>:</strong> <%= c.email %>
            </p>
            <p class="card-text">
              <span class="fa fa-envelope"></span>
              <strong><%= t('contacts.secondary_email') %>:</strong> <%= c.secondary_email %></li>
            </p>
            <p class="card-text">
              <strong><%= t('contacts.created_at') %>:</strong> <%= l(c.created_at, format: :long) %>
            </p>
            <%= link_to content_tag(:span, '', class: 'fa fa-trash'), contact_path(c), method: :delete, class: 'card-link btn btn-danger', title: 'Excluir Contato' %>
          </div>
      </div>
    <% end %>
  <% else %>
    <span>Não há contatos registrados</span>
  <% end %>
</div>

<%= link_to 'Voltar', clients_path, class: 'btn btn-light' %>


